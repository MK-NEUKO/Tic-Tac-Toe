<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="NEUKO    Tic Tac Toe" Height="500" Width="500">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="DimGray"/>
            <Setter Property="FontSize" Value="80"/>
            <Setter Property="Foreground" Value="LawnGreen"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="spielfeld" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="X" Name="feld_0_0" Grid.Column="0" Grid.Row="0" Click="feld_0_0_Click"/>
        <Button Content="O" Name="feld_1_0" Grid.Column="1" Grid.Row="0"/>
        <Button Content="X" Name="feld_2_0" Grid.Column="2" Grid.Row="0"/>
        
        <Button Content="X" Name="feld_0_1" Grid.Column="0" Grid.Row="1"/>
        <Button Content="O" Name="feld_1_1" Grid.Column="1" Grid.Row="1"/>
        <Button Content="X" Name="feld_2_1" Grid.Column="2" Grid.Row="1"/>
        
        <Button Content="O" Name="feld_0_2" Grid.Column="0" Grid.Row="2"/>
        <Button Content="X" Name="feld_1_2" Grid.Column="1" Grid.Row="2"/>
        <Button Content="O" Name="feld_2_2" Grid.Column="2" Grid.Row="2"/>
    </Grid>
</Window>
